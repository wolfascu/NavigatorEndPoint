<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO" />
      <param name="LevelMax" value="INFO" />
    </filter>
    <appendToFile value="true"/>
    <!-- The log file will be rolled based on 'Size' or 'Date' constraint -->
    <rollingStyle value="Size"/>
    <!-- Maximum length of each log file -->
    <maximumFileSize value="3MB"/>
    <!-- Up to maxSizeRollBackups log files will be kept -->
    <maxSizeRollBackups value="10"/>
    <!-- The log file written to will always be same name. The rolled files will be named: NavigatorServiceTest.log.1, NavigatorServiceTest.log.2, etc-->
    <staticLogFileName value="true"/>
    <param name="File" value="Logs\Log.txt" />
    <!--<param name="AppendToFile" value="true"/>-->
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%date{ABSOLUTE} %-5p%newline     %c%newline     HttpMethod: %property{HttpMethod}%newline     Http Headers: %property{Headers}%newline     Uri Accessed: %property{UriAccessed}%newline     IP Address: %property{IpAddress}%newline     Body Content: %property{BodyContent}%newline %m%n%newline ------------------------ %newline" />
    </layout>
  </appender>
  <root>
    <level value="INFO" />
    <appender-ref ref="LogFileAppender" />
  </root>
</log4net>